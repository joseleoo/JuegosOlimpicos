@model JuegosOlimpicos.Models.Registros

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
@if (ViewBag.Message != null && !ViewData.ModelState.IsValid)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

<h4>Registros</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeportistaId" class="control-label"></label>
                <select asp-for="DeportistaId" class="form-control" asp-items="ViewBag.DeportistaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoPruebaId" class="control-label"></label>
                <select asp-for="TipoPruebaId" class="form-control" asp-items="ViewBag.TipoPruebaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
